<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="BOTTOM_CENTER" prefHeight="66.0" prefWidth="748.0" style="-fx-border-color: black;"
         styleClass="footerContainer" stylesheets="@CSS/Footer.css" type="VBox" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0"/>
   </padding>
   <HBox maxHeight="32.0" prefHeight="32.0" prefWidth="695.0" spacing="15.0" styleClass="footer"
         stylesheets="@CSS/Footer.css" VBox.vgrow="NEVER">
      <padding>
         <Insets bottom="4.0"/>
      </padding>
      <VBox.margin>
         <Insets bottom="4.0" top="8.0"/>
      </VBox.margin>
      <HBox alignment="CENTER_LEFT" maxWidth="150.0" prefHeight="36.0" prefWidth="115.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="27.0"/>
         </HBox.margin>
         <Button fx:id="ContactusBtn" maxWidth="150.0" mnemonicParsing="false" onAction="#ContactusBtnDialogOpen"
                 prefHeight="32.0" prefWidth="112.0" styleClass="contactUs" text="Contact us" HBox.hgrow="NEVER">
            <graphic>
               <ImageView fitHeight="24.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@Images/help.png"/>
               </ImageView>
            </graphic>
            <HBox.margin>
               <Insets/>
            </HBox.margin>
            <font>
               <Font size="13.0"/>
            </font>
         </Button>
      </HBox>
      <HBox alignment="CENTER" prefHeight="36.0" prefWidth="373.0" HBox.hgrow="ALWAYS">
         <Label alignment="CENTER" prefHeight="39.0" style="-fx-border-color: black;"
                stylesheets="@CSS/Footer.css" text="©All Rights Reserved for හක්මණ ප්‍රාදේශීය සභාව"
                textAlignment="CENTER" HBox.hgrow="ALWAYS">
            <styleClass>
               <String fx:value="title"/>
               <String fx:value="border"/>
            </styleClass>
         </Label>
      </HBox>
      <VBox alignment="CENTER_RIGHT" maxWidth="150.0" prefHeight="32.0" prefWidth="140.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="27.0"/>
         </HBox.margin>
         <Label fx:id="dateLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="19.0" prefWidth="140.0"
                styleClass="datetime" textAlignment="CENTER">
            <font>
               <Font size="13.0"/>
            </font>
            <padding>
               <Insets left="2.0" right="2.0"/>
            </padding>
         </Label>
         <Label fx:id="timeLabel" alignment="CENTER" prefHeight="17.0" prefWidth="101.0" styleClass="datetime"
                stylesheets="@CSS/Footer.css"/>
      </VBox>
   </HBox>
</fx:root>
