                            style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;"
                            VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets left="27.0" right="27.0"/>
                    </VBox.margin>
                    <ScrollPane fx:id="formPane" fitToHeight="true" fitToWidth="true" prefHeight="200.0"
                                prefWidth="200.0" stylesheets="@CSS/DevDetailedView.css"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <VBox alignment="CENTER" spacing="20.0">
                            <padding>
                                <Insets top="10.0"/>
                            </padding>
                            <HBox fx:id="interactionHbox" alignment="CENTER" prefHeight="42.0"
                                  prefWidth="631.0" spacing="10.0"
                                  style="-fx-border-color: BLACK; -fx-border-width: 1 0 1 0; -fx-background-color: #CDE8E5;"
                                  VBox.vgrow="ALWAYS">
                                <Label text="MORE DETAILS" HBox.hgrow="NEVER">
                                    <font>
                                        <Font name="System Bold" size="28.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Label>
                                <Button fx:id="editBtn" mnemonicParsing="false" onAction="#edit"
                                        prefWidth="80.0" styleClass="btn" text="Edit"
                                        HBox.hgrow="NEVER">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="saveBtn" layoutX="405.0" layoutY="19.0"
                                        mnemonicParsing="false" onAction="#save"
                                        prefWidth="80.0" styleClass="btn" text="Save"/>
                                <Button fx:id="resetBtn" layoutX="460.0" layoutY="19.0"
                                        mnemonicParsing="false" onAction="#cancel"
                                        prefWidth="80.0" styleClass="btn" text="Reset"/>
                            </HBox>
                            <HBox spacing="20.0">
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                                <VBox prefWidth="100.0" spacing="20.0" HBox.hgrow="ALWAYS">
                                    <VBox fx:id="commonVbox" spacing="10.0"
                                          VBox.vgrow="ALWAYS">
                                        <HBox VBox.vgrow="ALWAYS">
                                            <Label prefWidth="150.0"
                                                   text="Registration Number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="regNumTextField"
                                                       editable="false"
                                                       style="-fx-border-radius: 5; -fx-border-color: #03AED2;"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox VBox.vgrow="ALWAYS">
                                            <Label prefWidth="150.0" text="Model"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="modelTextField"
                                                       editable="false"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox VBox.vgrow="ALWAYS">
                                            <Label prefWidth="150.0" text="Status"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="StatusTextField"
                                                       editable="false"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                    </VBox>
                                    <VBox fx:id="otherDetailVbox" spacing="10.0"
                                          VBox.vgrow="ALWAYS">
                                        <HBox fx:id="other1Hbox" VBox.vgrow="ALWAYS">
                                            <Label fx:id="other1Lbl"
                                                   prefWidth="150.0"
                                                   text="Purchased From"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other1"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other2Hbox">
                                            <Label fx:id="other2Lbl"
                                                   prefWidth="150.0" text="Ram"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other2"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other3Hbox">
                                            <Label fx:id="other3Lbl"
                                                   prefWidth="150.0"
                                                   text="Processor"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other3"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other4Hbox">
                                            <Label fx:id="other4Lbl"
                                                   prefWidth="150.0" text="Warranty"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other4"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other5Hbox">
                                            <Label fx:id="other5Lbl"
                                                   prefWidth="150.0"
                                                   text="Hard Disk"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other5"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other6Hbox">
                                            <Label fx:id="other6Lbl"
                                                   prefWidth="150.0"
                                                   text="Operatiing System"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other6"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other7Hbox">
                                            <Label fx:id="other7Lbl"
                                                   prefWidth="150.0"
                                                   text="Serial Number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other7"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other8Hbox">
                                            <Label fx:id="other8Lbl"
                                                   prefWidth="150.0"
                                                   text="Floppy Disk Drive"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other8"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other9Hbox">
                                            <Label fx:id="other9Lbl"
                                                   prefWidth="150.0"
                                                   text="Sound Card"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other9"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other10Hbox">
                                            <Label fx:id="other10Lbl"
                                                   prefWidth="150.0" text="TV Card"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other10"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="other11Hbox">
                                            <Label fx:id="other11Lbl"
                                                   prefWidth="150.0"
                                                   text="Network Card"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="other11"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                    </VBox>
                                </VBox>
                                <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0"
                                      HBox.hgrow="ALWAYS">
                                    <VBox fx:id="userDetailsVbox" alignment="TOP_CENTER"
                                          spacing="10.0"
                                          style="-fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 2; -fx-background-radius: 10;">
                                        <padding>
                                            <Insets bottom="5.0" left="5.0" right="5.0"/>
                                        </padding>
                                        <Label prefHeight="20.0" prefWidth="100.0"
                                               text="User Detail" VBox.vgrow="NEVER">
                                            <font>
                                                <Font size="16.0"/>
                                            </font>
                                        </Label>
                                        <HBox fillHeight="false" VBox.vgrow="NEVER">
                                            <Label prefWidth="150.0" text="NIC"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="userNIC"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fillHeight="false" VBox.vgrow="NEVER">
                                            <Label prefWidth="150.0" text="Name"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="userName"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fillHeight="false" VBox.vgrow="NEVER">
                                            <Label prefWidth="150.0" text="Title"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="userTitle"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fillHeight="false" VBox.vgrow="NEVER">
                                            <Label prefWidth="150.0"
                                                   text="Gmail Address"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="userGmail"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox alignment="CENTER_RIGHT"
                                              prefHeight="100.0" prefWidth="200.0"
                                              spacing="10.0">
                                            <Button fx:id="userEditBtn"
                                                    mnemonicParsing="false"
                                                    onAction="#editUser"
                                                    styleClass="btn"
                                                    text="Edit deviceUser Details"/>
                                            <Button fx:id="assignUserBtn"
                                                    layoutX="214.0" layoutY="10.0"
                                                    mnemonicParsing="false"
                                                    onAction="#assignUser"
                                                    styleClass="btn"
                                                    text="Assign deviceUser"/>
                                        </HBox>
                                    </VBox>
                                    <VBox fx:id="inputVbox" alignment="TOP_CENTER"
                                          prefWidth="400.0" spacing="10.0">
                                        <Label prefHeight="20.0" prefWidth="111.0"
                                               text="Input Devices">
                                            <font>
                                                <Font size="16.0"/>
                                            </font>
                                        </Label>
                                        <HBox fx:id="input1Hbox">
                                            <Label fx:id="input1Lbl"
                                                   prefWidth="200.0"
                                                   text="Mouse Registration number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="input1"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="input2Hbox">
                                            <Label fx:id="input2Lbl"
                                                   prefWidth="200.0"
                                                   text="Keyboard Registration number"
