                                        <HBox fx:id="input3Hbox">
                                            <Label fx:id="input3Lbl"
                                                   prefWidth="200.0"
                                                   text="External Mic Registration number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="input3"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="input4Hbox">
                                            <Label fx:id="input4Lbl"
                                                   prefWidth="200.0"
                                                   text="Scanner Registration number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="input4"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                    </VBox>
                                    <VBox fx:id="outputVbox" alignment="TOP_CENTER"
                                          spacing="10.0">
                                        <Label prefHeight="20.0" prefWidth="100.0"
                                               text="Output device">
                                            <font>
                                                <Font size="16.0"/>
                                            </font>
                                        </Label>
                                        <HBox fx:id="output1Hbox">
                                            <Label fx:id="output1Lbl"
                                                   prefWidth="200.0"
                                                   text="Monitor Registration number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="output1"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="output2Hbox">
                                            <Label fx:id="output2Lbl"
                                                   prefWidth="200.0"
                                                   text="Projector Registration number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="output2"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                        <HBox fx:id="output3Hbox">
                                            <Label fx:id="output3Lbl"
                                                   prefWidth="200.0"
                                                   text="Speaker Registration number"
                                                   HBox.hgrow="ALWAYS"/>
                                            <TextField fx:id="output3"
                                                       HBox.hgrow="ALWAYS"/>
                                        </HBox>
                                    </VBox>
                                </VBox>
                            </HBox>
                        </VBox>

                    </ScrollPane>
                </AnchorPane>

                <!--Footer Component-->
                <FooterController fx:id="footerController" prefHeight="39.0" prefWidth="770.0">
                    <VBox.margin>
                        <Insets left="27.0" right="27.0"/>
                    </VBox.margin>
                </FooterController>
            </VBox>
        </HBox>
    </VBox>

</AnchorPane>
